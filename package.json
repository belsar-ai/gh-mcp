{
  "name": "@belsar-ai/gh-mcp",
  "version": "2.2.0",
  "description": "Model Context Protocol (MCP) server for GitHub Issues with script execution",
  "keywords": [
    "mcp",
    "github",
    "issues",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "homepage": "https://github.com/belsar-ai/gh-mcp#readme",
  "bugs": {
    "url": "https://github.com/belsar-ai/gh-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belsar-ai/gh-mcp.git"
  },
  "license": "Apache-2.0",
  "author": "Kyle Lyon",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gh-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "prepare": "npm run build && (test -d .git && ./scripts/setup-husky.sh || true)",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "prepublishOnly": "npm run build && npm test",
    "release:patch": "npm version patch -m 'Release %s'",
    "release:minor": "npm version minor -m 'Release %s'",
    "release:major": "npm version major -m 'Release %s'",
    "release:beta": "npm version prerelease --preid=beta -m 'Release %s'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "smol-toml": "^1.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
